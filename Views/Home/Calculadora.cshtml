
@{
    ViewBag.Title = "Calculadora";
@model EvaluacionCalculadora.ViewModel.OperacionesBasicas
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<h2>Calculadora Basica</h2>
@using (Html.BeginForm("Calculadora", "Home"))
{
    <div class="mb-3">
        @Html.TextBoxFor(model => model.num1, null, new { @class = "form-control input-group-in", placeholder = "Ingresa el numero 1" })
    </div>
    <div class="mb-3">
        @Html.TextBoxFor(model => model.num2, null, new { @class = "form-control input-group-in", placeholder = "Ingresa el numero 2" })
    </div>
    <div class="mb-3">


        @Html.CheckBoxFor(model => model.opSuma) sumar
        @Html.CheckBoxFor(model => model.opResta) Restar
        @Html.CheckBoxFor(model => model.opMulti) Multiplicar
        @Html.CheckBoxFor(model => model.opDivicion) Divicion
        <hr />
        <br />
        <button type="submit" class="btn btn-primary">Listo</button>
    </div>
 }






